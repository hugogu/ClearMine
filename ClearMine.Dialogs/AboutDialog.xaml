<Window x:Class="ClearMine.UI.Dialogs.AboutDialog" x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="{StaticResource DialogBackground}"
        TextOptions.TextFormattingMode="Display"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        Title="About ClearMine"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <DockPanel Margin="12">
        <DockPanel DockPanel.Dock="Bottom"
                   LastChildFill="False">
            <Button Content="OK"
                    DockPanel.Dock="Right"
                    IsCancel="True"
                    IsDefault="True" />
        </DockPanel>
        <DockPanel Margin="0,0,0,12">
            <Border Background="{StaticResource MineBrush}"
                    Width="48" Height="48"
                    UseLayoutRounding="True"
                    Margin="0,0,12,0"/>
            <TextBlock>
                <Run Text="Clear Mine "
                     FontSize="16" FontWeight="Bold" />
                Version 1.0<LineBreak />
                <LineBreak />
                <Run Text="Hugo Gu All Rights Reserved." />
            </TextBlock>
        </DockPanel>
    </DockPanel>
</Window>
