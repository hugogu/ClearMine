<OptionDialog x:Class="ClearMine.UI.Dialogs.GameWonWindow"
              x:ClassModifier="internal"
              xmlns:h="clr-namespace:ClearMine.Framework.Commands;assembly=ClearMine.Framework"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              h:CommandsHelper.LoadBindingsFromVM="True"
              WindowStartupLocation="CenterOwner"
              Message="{Binding Message, Mode=OneWay}"
              Content="{Binding Details, Mode=OneWay}"
              Title="Clear Mine - Won">
    <OptionDialog.Options>
        <x:Array Type="{x:Type Button}">
            <Button Margin="0,0,7,0"
                    IsCancel="True"
                    Content="E_xit"
                    Click="OnExitClick" />
            <Button IsDefault="True"
                    Content="Start _new game"
                    Click="OnNewGameButtonClick" />
        </x:Array>
    </OptionDialog.Options>
</OptionDialog>
