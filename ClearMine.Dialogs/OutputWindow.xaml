<Window x:Class="ClearMine.UI.Dialogs.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        TextOptions.TextFormattingMode="Display"
        ShowInTaskbar="False"
        ShowActivated="False"
        WindowStyle="ToolWindow"
        Width="300" Height="300"
        Title="{DynamicResource OutputDialogTitle}">
    <TextBox x:Name="logBox"
             IsReadOnly="True"
             VerticalScrollBarVisibility="Auto">
        <TextBox.ContextMenu>
            <ContextMenu>
                <MenuItem Command="Copy"
                          CommandTarget="{x:Reference logBox}"
                          Header="{DynamicResource CopyCommandLabel}" />
                <Separator />
                <MenuItem Header="{DynamicResource ClearCommandLabel}"
                          Click="OnClearClick" />
            </ContextMenu>
        </TextBox.ContextMenu>
    </TextBox>
</Window>
